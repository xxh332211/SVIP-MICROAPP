/* pages/user/selfHelp/Index/Index.wxss */
.box {
  margin-top: 1px;
  padding-bottom: 200rpx;
}

/* 空白页 */
.not-order {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 200rpx;
  background: #fff;
}

.not-order image {
  width: 300rpx;
  height: 300rpx;
  background: #F8F8F8;
  border-radius: 50%;
}

.not-order text {
  font-size: 32rpx;
  margin-top: 50rpx;
}

.item {
  width: 100%;
  height: 130rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #FFFFFF;
  position: relative;
  padding: 0 30rpx;
  margin-bottom: 24rpx;
}

.item .name {
  width: 300rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 32rpx;
  font-weight: bold;
}

.item .right {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.item .right .green {
  font-size: 28rpx;
  color: #54D560;
}

.item .right .red {
  font-size: 28rpx;
  color: #FC5C6B;
}

.item .right .orange {
  font-size: 28rpx;
  color: #FFB74D;
}

.item .right .gray {
  font-size: 28rpx;
  color: #B8B8B8;
}

.item .right .arrow {
  width: 13rpx;
  height: 25rpx;
  margin-left: 15rpx;
}

.item .lottery {
  position: absolute;
  top: -16rpx;
  right: 50rpx;
  width: 256rpx;
  height: 61rpx;
  background: url(https://img.51jiabo.com/ff9ded07-7435-4a38-8eeb-0520a97c2b84.gif) no-repeat;
  background-size: 100% 100%;
}

.self-btn {
  width: 686rpx;
  height: 94rpx;
  position: fixed;
  bottom: 85rpx;
  left: 32rpx;
  background: #FF0036;
  font-size: 36rpx;
  color: #FFFFFF;
  text-align: center;
  line-height: 94rpx;
}

/* 弹窗 */
.flag {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .7);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9999;
}

.flag .fillInPopup {
  width: 620rpx;
  background: #fff;
  border-radius: 8rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  overflow: hidden;
  padding-bottom: 50rpx;
}

.flag .fillInPopup .title {
  width: 450rpx;
  margin: 94rpx auto 60rpx;
  font-size: 30rpx;
  line-height: 48rpx;
  text-align: center;
}

.flag .fillInPopup .know {
  width: 190rpx;
  height: 70rpx;
  background: rgba(230, 0, 45, 1);
  border-radius: 3rpx;
  font-size: 36rpx;
  color: rgba(255, 255, 255, 1);
  text-align: center;
  line-height: 70rpx;
  margin: 0 auto;
}

.pull-down{
  color: #E6002D;
  text-align: center;
  padding: 10rpx 0;
  font-size: 28rpx;
}

@keyframes xmb-pull{
  from{
    top: -100%;
  }
  to{
    top: 0;
  }
}

