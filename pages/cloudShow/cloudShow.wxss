/* pages/cloudShow/cloudShow.wxss */

image {
  display: block;
}

.swiper-box .swiper {
  height: 600rpx;
}

.swiper-box .wx-swiper-dots {
  position: absolute;
  bottom: 50rpx;
}

.swiper-box {
  min-height: 132rpx;
  position: relative;
}

.pos {
  min-width: 140rpx;
  padding: 0 20rpx;
  height: 55rpx;
  border-radius: 27rpx;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  top: 25rpx;
  left: 30rpx;
  z-index: 9;
}

.pos image {
  width: 21rpx;
  height: 33rpx;
  margin-right: 8rpx;
}

.pos text {
  font-size: 32rpx;
  color: #fff;
  font-weight: bold;
}

.live-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 690rpx;
  border-radius: 15rpx;
  margin-top: -32rpx;
  margin-left: 30rpx;
  padding: 39rpx 0 62rpx;
  z-index: 1;
  position: relative;
  box-shadow: 0 10rpx 15rpx 1rpx rgba(0, 0, 0, 0.03);
  background: url('https://img.51jiabo.com/8c291994-061e-4fc8-961e-f93240a1adab.gif') no-repeat;
  background-size: 100% 100%;
}

.live-box .time {
  width: 100%;
  text-align: center;
  font-size: 38rpx;
  font-weight: bold;
}

.live-box .time text {
  font-size: 32rpx;
  font-weight: normal;
  margin-left: 23rpx;
}

.live-box .count {
  width: 100%;
  text-align: center;
  font-size: 32rpx;
  color: #8C8C8C;
  margin-top: 21rpx;
}

.live-box .count text {
  font-size: 32rpx;
  color: #E30948;
  margin-left: 19rpx;
}

.live-box .number {
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  color: #777777;
  margin-top: 38rpx;
}

.live-box .number text {
  font-size: 28rpx;
  color: #E52C59;
}

.live-box .reserve {
  width: 402rpx;
  height: 78rpx;
  border-radius: 35rpx;
  background: linear-gradient(171deg, rgba(221, 34, 129, 1), rgba(229, 3, 57, 1));
  box-shadow: 0 10rpx 20rpx 0 rgba(92, 92, 92, 0.3);
  line-height: 78rpx;
  text-align: center;
  color: #fff;
  font-size: 35rpx;
  font-weight: bold;
  margin-top: 44rpx;
}

.live-box .other {
  display: flex;
  justify-content: center;
  margin-top: 40rpx;
}

.live-box .other .award {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 203rpx;
  height: 65rpx;
  border: 1px solid rgba(229, 44, 89, 1);
  border-radius: 32rpx;
  font-size: 28rpx;
  color: #E73C66;
}
.live-box .other .award::before{
  content: "";
  display: block;
  width: 31rpx;
  height: 31rpx;
  background: url(https://img.51jiabo.com/b77fe8da-4da4-4d97-87ea-61a291a1b25a.png) no-repeat;
  background-size: 100%;
}
.live-box .other .ico {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #E73C66;
  margin-left: 29rpx;
}
.live-box .other .ico::before{
  content: "";
  display: block;
  width: 31rpx;
  height: 31rpx;
  background: url(https://img.51jiabo.com/98121a00-a9c6-49b6-9eea-689dae8ec354.png) no-repeat;
  background-size: 100%;
  margin-right: 7rpx;
}
.live-box .other .rule {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #E73C66;
  margin-left: 22rpx;
}
.live-box .other .rule::before{
  content: "";
  display: block;
  width: 31rpx;
  height: 31rpx;
  background: url(https://img.51jiabo.com/dc351f7a-f029-43d5-a619-5bfa294fc7d4.png) no-repeat;
  background-size: 100%;
  margin-right: 7rpx;
}

.flow,
.adv {
  margin-top: 44rpx;
  padding-bottom: 120rpx;
}

.off-line {
  width: 100%;
}

.off-line image {
  width: 100%;
}

.off-line .text {
  font-size: 34rpx;
  margin-top: 34rpx;
}

.off-line .text text {
  color: #E6002D;
}

.share-popup{
  width: 100%;
  height: 100%;
  position: fixed;
  bottom: 0;
  z-index: 11;
  background-color: rgba(0,0,0,.7);
}
.bottom {
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 100%;
  height: 152rpx;
  background-color: #fff;
  position: absolute;
  bottom: 110rpx;
}

.share {
  display: flex;
  align-items: center;
  background: none;
  border: none;
  margin: 0;
  padding: 0;
  outline: none;
}

.share::after {
  border: none;
}

.share image {
  width: 80rpx;
  height: 80rpx;
  margin-right: 24rpx;
}

.share text {
  font-size: 32rpx;
  color: #353535;
}

.popup {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .7);
  position: fixed;
  z-index: 15;
  top: -99999rpx;
}
.popup.visible{
  top: 0;
}
.popup .popup-bg{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  z-index: 16;
}
.popup .content {
  width: 257px;
  height: 389px;
  position: absolute;
  top: 45%;
  left: 50%;
  transform: translate(-50%,-50%);
  z-index: 17;
}
.popup .content image{
  width: 100%;
}
.popup .content .canvas{
  width: 100%;
  height: 100%;
}
.popup .content .close {
  width: 51rpx;
  height: 51rpx;
  background: url(https://img.51jiabo.com/6bfdd135-0d31-4063-b342-429837c6c8f2.png) no-repeat;
  background-size: 100%;
  position: absolute;
  top: -50rpx;
  right: -62rpx;
}

.popup .content .save {
  width: 206rpx;
  height: 61rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 31rpx;
  font-size: 26rpx;
  text-align: center;
  line-height: 61rpx;
  position: absolute;
  bottom: -101rpx;
  left: 154rpx;
}

.fixed-adv{
  position: fixed;
  right: 10rpx;
  z-index: 10;
  bottom: 200rpx;
}
.fixed-adv image{
  width: 140rpx;
  height: 140rpx;
}