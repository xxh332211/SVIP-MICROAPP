/* pages/cloudPackage/cloudRule/index.wxss */
.wrap {
  width: 100%;
  /* position: absolute;
  top: 0;
  z-index: 5; */
  padding-bottom: 152rpx;
  background: #f5f5f5;
}

.record-box {
  width: 636rpx;
  background: rgba(103, 91, 203, .6);
  border-radius: 20rpx;
  position: absolute;
  top: 641rpx;
  left: 51rpx;
}

.record-popup {
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 1;
}

.record {
  height: 50rpx;
}

.record .swiper-item {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #fff;
  justify-content: center;
}

.record .swiper-item .name {
  width: 210rpx;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.record .swiper-item text {
  color: #FFFC18;
  font-weight: bold;
}

.rule {
  position: absolute;
  top: 840rpx;
  left: 64rpx;
}

.rule .tit {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: #E20E54;
  font-weight: bold;
  padding-bottom: 20rpx;
}

.rule .tit::before {
  content: "";
  display: block;
  width: 10rpx;
  height: 10rpx;
  background: #E20E54;
  margin-right: 14rpx;
  transform: rotate(45deg);
}

.rule .content-box {
  width: 620rpx;
}

.rule .content {
  font-size: 24rpx;
  color: #3C14B7;
}

.bottom {
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 100%;
  height: 152rpx;
  background-color: #fff;
  position: fixed;
  bottom: 0;
}

.share {
  display: flex;
  align-items: center;
  background: none;
  border: none;
  margin: 0;
  padding: 0;
  outline: none;
}

.share::after {
  border: none;
}

.share image {
  width: 80rpx;
  height: 80rpx;
  margin-right: 24rpx;
}

.share text {
  font-size: 32rpx;
  color: #353535;
}

.popup {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .7);
  position: fixed;
  z-index: 15;
  top: -99999rpx;
}

.popup.visible {
  top: 0;
}

.popup .popup-bg {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  z-index: 16;
}

.popup .content {
  width: 257px;
  height: 389px;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 17;
}

.popup .content image {
  width: 100%;
}

.popup .content .canvas {
  width: 100%;
  height: 100%;
}

.popup .content .close {
  width: 51rpx;
  height: 51rpx;
  background: url(https://img.51jiabo.com/6bfdd135-0d31-4063-b342-429837c6c8f2.png) no-repeat;
  background-size: 100%;
  position: absolute;
  top: -50rpx;
  right: -62rpx;
}

.popup .content .save {
  width: 206rpx;
  height: 61rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 31rpx;
  font-size: 26rpx;
  text-align: center;
  line-height: 61rpx;
  position: absolute;
  bottom: -101rpx;
  left: 154rpx;
}

.off-line {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
}

.off-line image {
  width: 183rpx;
  height: 127rpx;
}

.off-line .text {
  font-size: 34rpx;
  margin-top: 34rpx;
}