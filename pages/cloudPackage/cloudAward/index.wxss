page{
  background: #fff;
}
.balance {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 296rpx;
  background: url(https://img.51jiabo.com/8dee220e-f93a-4cdb-b234-c49bf8455f3a.png) no-repeat;
  background-size: 100%;
  color: #fff;
}

.balance .text {
  font-size: 36rpx;
  margin-top: 21rpx;
}

.balance .number {
  font-size: 94rpx;
  margin-top: -22rpx;
}

.balance .withdraw {
  width: 270rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 3rpx 7rpx 0px rgba(60, 140, 0, 0.35);
  border-radius: 30rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #7B32DC;
  text-align: center;
  line-height: 60rpx;
  margin-top: -6rpx;
}

.rules{
  border-top: 1px solid #E1E1E1;
  margin:30rpx 30rpx 0;
  padding:18rpx 10rpx 50rpx;
}
.rules .title{
  font-size: 36rpx;
  color: #222222;
  font-weight: bold;
  padding-bottom: 6rpx;
}
.rules .content{
  font-size: 28rpx;
  color: #777777;
}
.adv{
  width: 700rpx;
  margin-left: 25rpx;
}