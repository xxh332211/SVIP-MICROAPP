/* pages/cloudShowSuccess/index.wxss */
.reserve-success {
  width: 690rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #fff;
  border-radius: 15rpx;
  box-shadow: 0 10rpx 15rpx 1rpx rgba(0, 0, 0, 0.03);
  padding: 40rpx 0 70rpx;
  margin: 30rpx 0 30rpx 30rpx;
}

.reserve-success image {
  width: 68rpx;
  height: 69rpx;
}

.reserve-success .tit {
  font-size: 32rpx;
  font-weight: bold;
  color: #E6002D;
  margin-top: 4rpx;
}

.reserve-success .p {
  font-size: 24rpx;
  color: #5A5A5A;
  margin-top: 20rpx;
}

.reserve-success .share {
  width: 320rpx;
  height: 74rpx;
  background: linear-gradient(171deg, rgba(221, 34, 129, 1), rgba(229, 3, 57, 1));
  box-shadow: 0 10rpx 20rpx 0 rgba(92, 92, 92, 0.3);
  border-radius: 35rpx;
  font-size: 34rpx;
  color: #FFFFFF;
  font-weight: bold;
  text-align: center;
  line-height: 74rpx;
  margin-top: 59rpx;
}
.adv{
  width: 700rpx;
  margin-left: 25rpx;
}