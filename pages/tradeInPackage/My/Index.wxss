/* pages/tradeInPackage//My/Index.wxss */
page{
  background: #fff;
}
image{
  display: block;
}
.empty{
  font-size: 28rpx;
  color: #999;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.goods-list {
  padding-bottom: 100rpx;
}

.goods-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 240rpx;
  padding: 0 30rpx;
}

.img-box {
  flex-shrink: 0;
  width: 183rpx;
  height: 183rpx;
  position: relative;
}

.goods-item .right {
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-left: 30rpx;
}

.goods-item .name {
  font-size: 32rpx;
  color: #212121;
  font-weight: bold;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  line-height: 48rpx;
}

.bottom{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.goods-item .origin {
  font-size: 24rpx;
  color: #6A6A6A;
  text-decoration: line-through;
  margin-top: 17rpx;
}

.now {
  font-size: 36rpx;
  font-weight: bold;
  color: #E5002D;
  margin-top: -6rpx;
}

.xmb {
  display: flex;
  align-items: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #E6002D;
  margin-top: 12rpx;
}

.xmb .icon {
  width: 36rpx;
  height: 37rpx;
  background: url("https://img.51jiabo.com/fa453c56-6438-4fa6-a435-855877c2c6e5.png") no-repeat;
  background-size: 100% 100%;
  margin-right: 10rpx;
}

.btn-box {
  width: 152rpx;
  height: 75rpx;
  background: rgba(229, 0, 45, 1);
  line-height: 75rpx;
  text-align: center;
  font-size: 30rpx;
  color: #FFFFFF;
  border-radius: 40rpx;
}
.btn-box.gray{
  background: #A7A7A7;
}


.tab-box {
  display: flex;
  width: 100%;
  height: 96rpx;
  position: fixed;
  bottom: 0;
  z-index: 2;
  background: #fff;
}

.tab-box .tab {
  width: 50%;
  height: 100%;
  text-align: center;
  line-height: 96rpx;
  font-size: 36rpx;
  color: #333333;
  font-weight: bold;
  border-top: 1px solid #F7F7F7;
}

.tab-box .act {
  color: #fff;
  background: #E5002D;
  border: none;
}