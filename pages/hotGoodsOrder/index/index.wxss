/* pages/hotGoodsOrder/index/index.wxss */

.wrapper {
  background: #fff;
}
image{
  display: block;
}

.time-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 691rpx;
  border-radius: 2rpx;
  box-shadow: 0 0 10rpx 0 rgba(151, 110, 110, 0.2);
  position: relative;
  margin: 27rpx 30rpx 0;
  padding: 40rpx 0 37rpx;
}

.time-box .hot {
  width: 86rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  position: absolute;
  top: 39rpx;
  left: 0;
  font-size: 24rpx;
  font-weight: bold;
  color: white;
  background: url("data:image/png;base64,") no-repeat;
  background-size: 86rpx 40rpx;
}

.time-box .h5 {
  font-size: 32rpx;
  font-weight: bold;
  padding: 0 86rpx;
  text-align: center;
}

.time-box .sales {
  font-size: 28rpx;
  color: #777;
  margin-top: 20rpx;
}

/* 分类 */

.swiper-wrapper {
    height: 100rpx;
    transition-property: -webkit-transform;
    display: flex;
    align-items: center;
    box-shadow: 0px 7rpx 15rpx 0px rgba(81, 81, 81, 0.05);
    margin-top: 37rpx;
}

.swiper-slide {
    height: 100%;
    flex-shrink: 0;
    float: left;
}
.slide-box{
    display: flex;
    width: 100%;
    height: 100%;
    justify-content: center;
}
.swiper-slide .content {
    color: #777777;
    display: flex;
    height: 100%;
    align-items: center;
}
.swiper-slide .content.active {
    color: #222222;
    border-bottom: 4rpx solid #222222;
}

.onload {
  width: 100%;
  display: flex;
  justify-content: center;
  font-size: 20rpx;
  color: #999999;
  padding: 33rpx 0;
}