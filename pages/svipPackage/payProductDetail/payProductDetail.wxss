  font-size: 28rpx;
}

.region {
  width: 100%;
  height: 70rpx;
  margin-top: 20rpx;
  display: flex;
  border-bottom: 1px solid #D2D2D2;
}

.region .text {
  font-size: 28rpx;
}

.region .usertext {
  font-size: 28rpx;
  color: #4d4d4d;
}

.region input {
  font-size: 28rpx;
  color: #4d4d4d;
}

.getaddress {
  width: 100%;
  min-height: 44rpx;
  margin-top: 20rpx;
  padding-bottom: 20rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #D2D2D2;
}

.getaddress .usertext {
  font-size: 28rpx;
  color: #4d4d4d;
}

.getaddress .text-box {
  flex: 1;
  padding-left: 10rpx;
  font-size: 28rpx;
  min-height: 44rpx;
  position: relative;
}

