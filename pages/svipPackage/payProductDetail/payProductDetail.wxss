}

.mainHome .mian-message .message-top .user {
  width: 292rpx;
  border-bottom: 1px solid #D2D2D2;
  height: 70rpx;
  display: flex;
  align-items: center;
}

.mainHome .mian-message .message-top .user .usertext {
  font-size: 28rpx;
  color: #4d4d4d;
}

.mainHome .mian-message .message-top .user input {
