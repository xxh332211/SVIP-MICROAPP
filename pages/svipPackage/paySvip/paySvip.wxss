/* 返回有抵扣券提示弹层 */
.tips-popup {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
  background-color: rgba(0, 0, 0, .7);
}

.tips-popup .tips-box {
  width: 586rpx;
  background: #FFFFFF;
  border-radius: 12rpx;
}

.tips-popup .title {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #956656;
  font-weight: bold;
  padding: 43rpx 0 0;
}

.tips-popup .title::before {
  content: "";
  display: block;
  width: 67rpx;
  height: 2rpx;
  background: linear-gradient(-90deg, #000000 0%, #D9A77C 0%, #956656 0%, #FFFFFF 100%);
  margin-right: 6rpx;
}

.tips-popup .title::after {
  content: "";
  display: block;
  width: 67rpx;
  height: 2rpx;
  background: linear-gradient(90deg, #000000 0%, #D9A77C 0%, #956656 0%, #FFFFFF 100%);
  margin-left: 6rpx;
}

.tips-popup .content {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 21rpx;
}

.tips-popup .content image {
  width: 61rpx;
  height: 60rpx;
}

.tips-popup .detail {
  font-size: 23rpx;
  color: #956656;
  margin-left: 17rpx;
}

.tips-popup .btn-box {
  display: flex;
  width: 100%;
  border-top: 1px solid #D2D3D5;
  margin-top: 38rpx;
}

.tips-popup .cancel {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 50%;
  height: 100rpx;
  font-size: 34rpx;
  color: #777777;
  border-right: 1px solid #D2D3D5;
}

.tips-popup .confirm {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 50%;
  height: 100rpx;
  font-size: 34rpx;
  color: #956656;
}