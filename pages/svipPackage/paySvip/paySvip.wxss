  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
  box-sizing: content-box;
}

.navigate .return {
  width: 75rpx;
  height: 60rpx;
  background: url("https://img.51jiabo.com/10c74c3b-3825-4d97-a58b-6ee8cbcdf434.png") no-repeat;
  background-size: 20rpx 35rpx;
  background-position: 20rpx center;
