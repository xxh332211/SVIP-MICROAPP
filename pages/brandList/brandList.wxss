/* pages/brandList/brandList.wxss */

page{
  background: #fff;
}
/* 分类 */

.swiper-wrapper {
    height: 100rpx;
    transition-property: -webkit-transform;
    display: flex;
    align-items: center;
    box-shadow: 0px 7rpx 15rpx 0px rgba(81, 81, 81, 0.05);
}

.swiper-slide {
    height: 100%;
    flex-shrink: 0;
    float: left;
}
.slide-box{
    display: flex;
    width: 100%;
    height: 100%;
    justify-content: center;
}
.swiper-slide .content {
    color: #777777;
    display: flex;
    height: 100%;
    align-items: center;
}
.swiper-slide .content.active {
    color: #222222;
    border-bottom: 4rpx solid #222222;
}

/* 参展品牌 */

.brand-list {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  padding: 36rpx 0 10rpx 15rpx;
}

.brand-list .brand-item {
  margin: 0 0 26rpx 15rpx;
}

.brand-list .brand-item image {
  width: 220rpx;
  height: 120rpx;
  /* padding: 25rpx 30rpx; */
  border: 1px solid #e5e5e5;
}

.brand-list .brand-item .text {
  color: #666666;
  text-align: center;
  width: 220rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}