/**app.wxss**/
@import "./libs/weui.wxss";
/* 字体图标 */
@import "./libs/iconfont.wxss";
@import "./libs/iconfont2.wxss";

view {
  box-sizing: border-box;
}

page {
  background: #f5f5f5;
  width: 100%;
  height: 100%;
  overflow-x: hidden;
  overflow-y: auto;
  font-size: 24rpx;
}

button::after {
  border: none;
}

image {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

/*弹性布局*/

.flex-row {
  display: flex;
  flex-wrap: wrap;
  align-content: center;
  flex-direction: row;
}

.flex-column {
  display: flex;
  flex-wrap: wrap;
  align-content: center;
  flex-direction: column;
}

.verticalHorizontal {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
}

.middle {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
}

/* 单行文字隐藏 */

.text-hidden {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 多行文字隐藏 */

.text-hidden-2 {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.text-hidden-3 {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

/* 清除浮动 */

.clearfix:after {
  content: "";
  height: 0;
  line-height: 0;
  clear: both;
  visibility: hidden;
}

.clearfix {
  zoom: 1;
}

/* 三角标 */

.triangle {
  width: 0;
  height: 0;
  border-top: 8rpx solid transparent;
  border-left: 16rpx solid #e6002d;
  border-bottom: 8rpx solid transparent;
}

.normal-btn {
  transition: all .2s ease-in-out;
  user-select: none;
}

.normal-btn:not([disabled]):not(.disabled):active {
  opacity: .6;
}

.order-price {
  margin-right: 8rpx;
  font-size: 20rpx;
  display: inline-block;
  background: #E3A014;
  color: #FFF;
  line-height: 1;
  padding: 8rpx;
  border-radius: 8rpx;
}

.vip-price {
  margin-right: 8rpx;
  font-size: 20rpx;
  display: inline-block;
  background: #E6002D;
  color: #FFF;
  line-height: 1;
  padding: 8rpx;
  border-radius: 8rpx;
}