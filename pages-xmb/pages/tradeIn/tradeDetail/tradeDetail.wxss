/* pages-xmb/pages//tradeIn/tradeDetail/tradeDetail.wxss */

.box {
  position: relative;
}

.content {
  width: 100%;
  position: absolute;
  top: 0;
  z-index: 1;
}

.rule {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  font-size: 32rpx;
  color: #FFFFFF;
  padding: 31rpx;
}

.rule .icon {
  width: 32rpx;
  height: 32rpx;
  background: url(https://img.51jiabo.com/3298b99e-42a8-4404-855b-c0fd2aaec924.png) no-repeat;
  background-size: 100% 100%;
  margin-right: 10rpx;
}

.card {
  width: 690rpx;
  background: #FFFFFF;
  box-shadow: 0 10rpx 20rpx 0 rgba(157, 157, 157, 0.09);
  border-radius: 10rpx;
  margin-left: 30rpx;
  padding: 33rpx 30rpx;
  margin-bottom: 100rpx;
}

.card .title {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  font-size: 34rpx;
  font-weight: bold;
  color: #222222;
  padding-bottom: 40rpx;
}

.card .title .icon {
  width: 40rpx;
  height: 41rpx;
  background: url("https://img.51jiabo.com/84e885ee-ddf6-4557-a8a1-7635c12ce2e9.png") no-repeat;
  background-size: 100% 100%;
  margin-right: 29rpx;
}

.card .xmb-info {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  color: #222222;
  margin-bottom: 8rpx;
}

.check {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 225rpx;
  height: 49rpx;
  font-size: 30rpx;
  background: #FF0000;
  color: #fff;
  margin-left: 20rpx;
  border-radius: 11rpx;
}

.check.gray {
  background: #C0C0C0;
}

.goods-box {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.goods-box .img-box {
  position: relative;
  margin-top: 44rpx;
}

.goods-box .pokeImg {
  width: 217rpx;
  height: 125rpx;
  position: absolute;
  top: 29rpx;
  left: 118rpx;
}

.goods-box .img {
  display: block;
  width: 230rpx;
  height: 181rpx;
}

.goods-box .goods-name {
  font-size: 30rpx;
  color: #222222;
  margin-top: 12rpx;
}

.order-info {
  font-size: 32rpx;
  font-weight: bold;
  color: #000000;
  margin-top: 20rpx;
}

.order-item {
  display: flex;
  font-size: 28rpx;
  color: #666666;
  margin-top: 10rpx;
}

.order-item .tit {
  width: 138rpx;
  font-size: 28rpx;
  color: #333333;
}

.refund {
  width: 100%;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx dashed rgba(255, 0, 0, 1);
  margin: 100rpx 0;
  color: #E00020;
  font-size: 40rpx;
  border-radius: 48rpx;
}

/* 券码弹窗 */
.code-popup {
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 29;
  background: rgba(0, 0, 0, 0.7);
}

.code-popup .code-box {
  width: 610rpx;
  background: url("https://img.51jiabo.com/cf8a82d1-8ad7-4232-b7e9-b51af6efa331.png") no-repeat;
  background-size: 100% 100%;
  padding-bottom: 42rpx;
}

.code-popup .code-box .top {
  text-align: center;
}

.code-popup .code-box .top .tit {
  font-size: 36rpx;
  font-weight: bold;
  padding: 46rpx 0 0;
}

.code-popup .code-box .top .period {
  font-size: 30rpx;
  color: #e6002d;
  padding-bottom: 36rpx;
}

.code-popup .code-box .bottom {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.code-popup .code-box .bottom .canvas {
  width: 170px;
  height: 170px;
  margin-top: 55rpx;
  overflow: hidden;
  position: relative;
}

.code-popup .code-box .bottom .cou-code {
  font-size: 32rpx;
  margin-top: 20rpx;
}

.code-popup .code-box .bottom .cou-code.past {
  text-decoration: line-through;
}

.code-popup .code-box .bottom .status {
  width: 240rpx;
  height: 70rpx;
  border-radius: 5rpx;
  font-size: 36rpx;
  color: #fff;
  font-weight: bold;
  text-align: center;
  line-height: 70rpx;
  background: #e6002d;
  margin-top: 40rpx;
}

.code-popup .code-box .bottom .code-status.used {
  background: #f1c679;
}

.code-popup .code-box .bottom .code-status.past {
  background: #bababa;
}

.code-popup .code-box .bottom .code-status {
  width: 240rpx;
  height: 70rpx;
  background: rgba(229, 0, 45, 1);
  border-radius: 5px;
  color: #fff;
  text-align: center;
  line-height: 70rpx;
  margin: 34rpx auto 0;
  font-size: 30rpx;
}

.code-popup .fork {
  width: 60rpx;
  height: 60rpx;
  display: block;
  margin: 17rpx auto;
  border: 1px solid #fff;
  border-radius: 50%;
  padding: 10rpx;
}