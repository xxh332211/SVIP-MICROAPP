/* pages-xmb/pages//tradeIn/List/List.wxss */
image {
  display: block;
}

.container {
  padding-bottom: 280rpx;
}

.adv-box {
  position: relative;
}

.rule {
  width: 90rpx;
  height: 42rpx;
  font-size: 28rpx;
  text-align: center;
  line-height: 42rpx;
  font-weight: bold;
  color: #E6002E;
  background: #FFFFFF;
  box-shadow: 0px 5rpx 21rpx 0px rgba(204, 13, 50, 0.2);
  border-radius: 21rpx 0px 0px 21rpx;
  position: absolute;
  right: 0;
  top: 10rpx;
}

.total-xmb {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  font-size: 30rpx;
  font-weight: bold;
  color: #222222;
  padding: 30rpx 29rpx 26rpx;
}

.total-xmb .icon {
  width: 40rpx;
  height: 41rpx;
  background: url("https://img.51jiabo.com/fa453c56-6438-4fa6-a435-855877c2c6e5.png") no-repeat;
  background-size: 100% 100%;
  margin-right: 10rpx;
}

.goods-list {
  width: 690rpx;
  background: #fff;
  box-shadow: 0 10rpx 20rpx 0 rgba(157, 157, 157, 0.09);
  border-radius: 10rpx;
  margin-left: 30rpx;
  padding: 20rpx 0;
}

.goods-item {
  width: 100%;
  height: 221rpx;
  display: flex;
  align-items: center;
  position: relative;
  padding: 0 20rpx;
}

.goods-item .img-box {
  position: relative;
  flex-shrink: 0;
  margin-right: 16rpx;
}

.goods-item .sell-out {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  color: #FFFFFF;
  background: rgba(0, 0, 0, .6);
  z-index: 1;
}

.goods-item .img {
  width: 230rpx;
  height: 181rpx;
}

.goods-item .name {
  width: 100%;
  height: 96rpx;
  font-size: 30rpx;
  color: #222222;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  line-height: 48rpx;
  word-break: break-all;
}

.goods-item .origin {
  font-size: 24rpx;
  color: #6A6A6A;
  text-decoration: line-through;
  margin-top: 4rpx;
}

.goods-item .now {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #E6002D;
  margin-top: 12rpx;
}

.goods-item .now .icon {
  width: 34rpx;
  height: 35rpx;
  background: url("https://img.51jiabo.com/fa453c56-6438-4fa6-a435-855877c2c6e5.png") no-repeat;
  background-size: 100% 100%;
  margin-right: 10rpx;
}

.goods-item .right {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: absolute;
  right: 20rpx;
  bottom: 16rpx;
}

.goods-item .btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 180rpx;
  height: 58rpx;
  background: linear-gradient(90deg, #FF0036, #FF2600);
  border-radius: 29rpx;
  font-size: 28rpx;
  color: #FFFFFF;
}

.goods-item .btn.gray {
  background: #BABABA;
}

.goods-item .stock {
  font-size: 24rpx;
  color: #E6002E;
  margin-top: 16rpx;
}

.xmb-tradeIn {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 690rpx;
  height: 90rpx;
  background: #FFE9EC;
  border-radius: 45rpx;
  position: fixed;
  bottom: 130rpx;
  left: 30rpx;
  z-index: 9;
  font-size: 30rpx;
  font-weight: bold;
  color: #D3122E;
}

.xmb-tradeIn .icon {
  width: 41rpx;
  height: 35rpx;
  background: url(https://img.51jiabo.com/73ac393e-0a5f-4aea-80ed-265e2c69c63d.png) no-repeat;
  background-size: 100% 100%;
  margin-right: 20rpx;
}

.tab-box {
  display: flex;
  width: 100%;
  height: 96rpx;
  position: fixed;
  bottom: 0;
  z-index: 2;
  background: #fff;
}

.tab-box .tab {
  width: 50%;
  height: 100%;
  text-align: center;
  line-height: 96rpx;
  font-size: 36rpx;
  color: #333333;
  font-weight: bold;
  border-top: 1px solid #F7F7F7;
}

.tab-box .act {
  color: #fff;
  background: #E5002D;
  border: none;
}