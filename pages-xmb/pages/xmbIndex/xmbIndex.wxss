/* pages-xmb/pages/xmbIndex/xmbIndex.wxss */
.container{
  padding: 72rpx 0 100rpx;
}

.banner-bg {
  width: 100%;
  height: 584rpx;
  position: absolute;
  left: 0;
  top: -100rpx;
  z-index: -1;
  color: #fff;
  background: url("https://img.51jiabo.com/0722a0fa-7ff7-47c1-87b3-d2ecb8f30ef7.png") no-repeat;
  background-size: 100% 100%;
}

.num-title{
  color: #fff;
  font-size: 28rpx;
  text-align: center;
}

.num-title>.num{
  font-size: 60rpx;
  font-weight: bold;
  margin-right: 10rpx;
}

.main{
  width: 690rpx;
  min-height: 874rpx;
  background-color: #fff;
  border-radius: 10rpx;
  margin: 50rpx auto 0;
  padding: 0 30rpx 30rpx;
}

.main>.titles{
  height: 127rpx;
  line-height: 127rpx;
  display: flex;
  justify-content: space-between;
  font-size: 34rpx;
  font-weight: bold;
  color: #B0B0B0;
  border-bottom: 1rpx solid #ECECEC;
  padding: 0 120rpx;
}

.main .title{
  width: 111rpx;
  text-align: center;
}

.main>.titles>.active-title{
  color: #222222;
  border-bottom: 4rpx solid #FF2600;
}

.main>.item{
  height: 145rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #ECECEC;
}

.main .type-name{
  width: 240rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: #222222;
}

.main .date{
  width: 240rpx;
  font-size: 24rpx;
  color: #B0B0B0;
}

.main .point{
  font-size: 34rpx;
  color: #FF2600;
}
