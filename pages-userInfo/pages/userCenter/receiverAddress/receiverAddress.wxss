/* pages/userCenter/receiverAddress/receiverAddress.wxss */
.receiver-address {
  width: 100%;
  height: 100%;
  border-bottom: solid 1px #F6F6F6;
  padding: 15rpx 10rpx;
}

.address-item {
  border-radius: 6rpx;
  background: #ffffff;
  display: flex;
  flex-direction: column;
  padding: 10rpx;
  width: 730rpx;
}

.address-item+.address-item {
  margin-top: 20rpx;
}

.address-item>.divider {
  height: 2rpx;
  background: #F7F7F7;
  width: 100%;
}

.address-item>.user-info {
  font-weight: bold;
  font-size: 30rpx;
  padding: 8rpx 0 0 22rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.address-item>.address {
  font-size: 30rpx;
  color: #7D7D7D;
  padding: 0 22rpx 12rpx 22rpx;
}

.address-item>.operator {
  display: flex;
  flex-direction: row;
  padding: 12rpx 22rpx;
  justify-content: space-between;
}

.operator checkbox {
  height: 40rpx;
  font-size: 30rpx;
  color: #666666;
}

.operator checkbox .wx-checkbox-input {
  width: 40rpx;
  height: 40rpx;
  border-radius: 30rpx;
  border: 2rpx solid #F1F1F1;
}

.operator checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: #FF525C;
  border: none;
}

.operator checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  width: 28rpx;
  height: 28rpx;
  line-height: 28rpx;
  text-align: center;
  font-size: 22rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

.operator .opera-btn {
  font-size: 30rpx;
  color: #666;
}

.operator .opera-btn.gray {
  color: #999;
}

.operator .opera-btn+.opera-btn {
  margin-left: 40rpx;
}

.submit-btn {
  bottom: 60rpx;
  background: #D42B2B;
  box-shadow: 0 18rpx 18rpx 0 rgba(183, 48, 48, 0.33);
  border-radius: 5rpx;
  height: 100rpx;
  color: #FFF;
  font-size: 34rpx;
  position: fixed;
  left: 40rpx;
  width: 670rpx;
  line-height: 95rpx;
}

.opera-btns {
  padding-top: 8rpx;
}

.no-data {
  text-align: center;
  line-height: 100rpx;
  font-size: 30rpx;
  color: #D6D6D6;
}