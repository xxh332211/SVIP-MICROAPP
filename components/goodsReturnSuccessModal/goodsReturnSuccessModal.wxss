/* components/goodsUpdateUserName/goodsUpdateUserName.wxss */
.container{
  padding-bottom: 70rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  height: 750rpx;
}
.container image{
  width: 172rpx;
  height: 162rpx;
  display: block;
  margin: auto;
  margin-top: 140rpx;
  margin-bottom: 80rpx;
}
.title{
  text-align: center;
  font-size: 40rpx;
}
.text{
  font-size: 28rpx;
  color: #888888;
  text-align: center;
  margin-top: 20rpx;
}
.input{
  width: 380rpx;
  margin: auto;
  margin-bottom: 140rpx;
  border-bottom: solid 1px #979797;
  font-size: 32rpx;
  padding: 15rpx 0;
}
.submit{
  background: #E6001B;
  box-shadow: 0 18rpx 18rpx 0 rgba(183,48,48,0.33);
  border-radius: 100rpx;
  border-radius: 100rpx;
  width: 500rpx;
  margin: auto;
  color: #fff;
  font-size: 34rpx;
  transition: all .2s ease-in-out;
}
.submit:before, .submit:after{
  border: none;
  border-radius: 0;
}


.close-press{
  opacity: .6;
}