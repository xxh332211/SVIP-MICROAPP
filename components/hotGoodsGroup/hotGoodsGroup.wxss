/* components/hotGoodsGroup/hotGoodsGroup.wxss */
.hot-goods-group {
  position: relative;
  margin-top: 30rpx;
}

.group-bg {
  width: 100%;
  display: block;
}

.group-box {
  width: 100%;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 1;
  padding: 10rpx 30rpx;
  overflow: hidden;
}

.group-item {
  width: 330rpx;
  height: 175rpx;
  margin-bottom: 20rpx;
}