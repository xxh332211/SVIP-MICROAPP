/* components/svipBuyBtn/svipBuyBtn.wxss */
/* 字体图标 */
@import "../../libs/iconfont.wxss";
@import "../../libs/iconfont2.wxss";
/* 按钮 */

.flex-row {
  display: flex;
  flex-wrap: wrap;
  align-content: center;
  flex-direction: row;
}

.flex-column {
  display: flex;
  flex-wrap: wrap;
  align-content: center;
  flex-direction: column;
}

.verticalHorizontal {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
}

.middle {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
}
.button-box {
  position: relative;
}

.auth-login {
  position: absolute;
  top: 0;
  width: 100%;
  height: 100%;
  padding: 0;
  z-index: 3;
  background: none;
}

.btns {
  height: 100rpx;
  width: 690rpx;
  margin: 31rpx auto 60rpx;
  border-radius: 50rpx;
  background: #e6002d;
  color: #fff;
  box-shadow: 0 10rpx 20rpx 0 rgba(92, 92, 92, 0.3);
  z-index: 29;
}

.user-text {
  font-size: 40rpx;
  color: #fff;
  font-weight: 800;
}

.price {
  justify-content: center;
  align-items: center;
  flex: 1;
}

.svip-arrow {
  width: 40rpx;
  height: 40rpx;
  background: url("data:image/png;base64,") no-repeat;
  background-size: 100% 100%;
  margin-left: 10rpx;
}

.rush {
  font-size: 28rpx;
  color: #fff;
  line-height: 1;
}

.rush .amount {
  font-weight: 800;
  font-size: 36rpx;
}

.original {
  font-size: 24rpx;
  color: #ffd1ae;
  text-decoration: line-through;
}

.showing .show-tips {
  text-align: center;
  margin-top: -49rpx;
}

.origin {
  display: flex;
  align-items: baseline;
  font-size: 42rpx;
  font-weight: bold;
}

.origin .unit {
  font-size: 28rpx;
  font-weight: bold;
}

.open {
  width: 300rpx;
  height: 100%;
  position: relative;
}

.open .bg {
  height: 100%;
  width: 100%;
  position: absolute;
  z-index: 1;
  left: 0;
}

.open-main {
  position: absolute;
  justify-content: flex-end;
  align-items: center;
  z-index: 2;
  height: 100%;
  width: 100%;
  padding-right: 27rpx;
}

.discount {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.after {
  margin-right: 15rpx;
  margin-bottom: -10rpx;
}

.dredge {
  display: flex;
  align-items: center;
  font-weight: bold;
  font-size: 36rpx;
  color: #FFD1AE;
  line-height: 58rpx;
  margin-right: 15rpx;
}

.more {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: #ffdbb4;
  color: #222;
}

/* 浮动按钮 */
.fixed-button-box {
  position: fixed;
  bottom: 90rpx;
  left: 30rpx;
  width: 690rpx;
  z-index: 29;
}
.fixed-sign-detail {
  position: fixed;
  bottom: 0;
  left: 30rpx;
  width: 690rpx;
  z-index: 29;
}