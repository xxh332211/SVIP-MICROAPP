.poster-save-wrap {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  animation: fadeIn 0.2s ease-in-out;
  z-index: 99;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }

  to {
    opacity: 1;
  }
}

.bg{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.6);
  position: absolute;
  top: 0;
  left: 0;
}
.modal-content {
  width: 100%;
  height: 100%;
  position: relative;
  z-index: 100;
  text-align: center;
}
.modal-content canvas{
  width: 80%;
  height: 80%;
  margin: 0 auto;
  overflow: hidden;
}

.close-btn{
  background-color: #fff;
  height: 100rpx;
  width: 100rpx;
  margin: 0 auto;
  left: 0;
  right: 0;
  font-size: 60rpx;
  text-align: center;
  border-radius: 50rpx;
  z-index: 200;
  position: absolute;
}
.save-btn {
  color: #fff;
  background-color: #E6001B;
  border-color: #E6001B;
  width: 90%;
  margin-top: 30rpx;
  position: absolute;
  bottom: 20rpx;
  margin: 0 auto;
  left: 0;
  right: 0;
}