.modal-wrap{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  animation: fadeIn 0.2s ease-in-out;
  z-index: 99;
}


@keyframes fadeIn {
  from {
    opacity: 0;
  }

  to {
    opacity: 1;
  }
}

@keyframes slideInRight {
  from {
    transform: translate3d(-50%, -100%, 0);
    visibility: visible;
  }

  to {
    transform: translate3d(-50%, 0, 0);
  }
}

.bg{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.19);
}

.wrapper{
  position: fixed;
  width: 80%;
  top: 100rpx;
  left: 50%;
  transform: translate3d(-50%, 0, 0);
  animation: slideInRight .5s ease-in-out;
}
.modal-content{
  background: #FFF;
  box-shadow: 0 19rpx 14rpx 0 rgba(0,0,0,0.20);
  border-radius: 10rpx;
  min-height: 100rpx;
  position: relative;
}

.close{
  width: 90rpx;
  height: 90rpx;
  display: block;
  position: absolute;
  bottom: -200rpx;
  left: 50%;
  margin-left: -43rpx;
  transition: all .2s ease-in-out;
}
.close image{
  width: 90rpx;
  height: 90rpx;
}
.close:active{
  opacity: .6;
}