/* components/modal/modal.wxss */

.modal-wrap {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.modal-mask {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: rgba(0, 0, 0, 0.4);
}

.modal-content {
  width: 80%;
  background: #fff;
  border-radius: 6px;
  font-size: 0.8rem;
  overflow: hidden;
}

