.modal-wrap{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  animation: fadeIn 0.2s ease-in-out;
  z-index: 99;
}


@keyframes fadeIn {
  from {
    opacity: 0;
  }

  to {
    opacity: 1;
  }
}

@keyframes slideInUp {
  from {
    transform: translate3d(0, 100%, 0);
    visibility: visible;
  }

  to {
    transform: translate3d(0, 0, 0);
  }
}

.bg{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.19);
}

.modal-content{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #FFF;
  box-shadow: 0 -20rpx 20rpx 0 rgba(0,0,0,0.19);
  border-radius: 26rpx 26rpx 0 0;
  min-height: 100rpx;
  animation: slideInUp .5s ease-in-out;
}
