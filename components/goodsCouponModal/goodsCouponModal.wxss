/* components/goodsCouponModal/goodsCouponModal.wxss */

.cont{
  padding-top: 60rpx;
}
.cont>.title{
  text-align: center;
  font-size: 36rpx;
  line-height: 50rpx;
  color: #000;
  margin-bottom: 20rpx;
}
.list{
  max-height: 50vh;
}
.item{
  position: relative;
  margin: 20rpx;
  height: 200rpx;
  transition: all .2s ease-in-out;
}
.item:active{
  opacity: 0.6;
}

.bg{
  width: 100%;
  height: 100%;
}
.info{
  position: absolute;
  left: 0;
  right: 100rpx;
  bottom: 0;
  top: 0;
  display: flex;
  align-items: center;
}
.left{
  width: 210rpx;
  font-size:24rpx;
  color: #AE9B75;
  text-align: center;
}
.left .price{
  font-size: 60rpx;
  line-height: 1;
}
.left .price>text.u{
  font-size: 36rpx;
}
.right{
  flex: 1;
  font-size:24rpx;
  color: #AE9B75;
  padding-left: 30rpx;
}
.right .name{
  font-size: 40rpx;
  line-height: 60rpx;
}

.btn{
  background: #AE9B75;
  border-radius: 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #E3DED2;
  height: 40rpx;
  width: 100rpx;
  text-align: center;
  position: absolute;
  right: 40rpx;
  top: 50%;
  margin-top: -20rpx;
  line-height: 40rpx;
}
.btn.disabled{
  opacity: 0.5;
}

.buy-btn{
  margin-top: 30rpx;
  margin-bottom: 60rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
  background: #D42B2B;
  box-shadow: 0 18rpx 18rpx 0 rgba(183,48,48,0.33);
  border-radius: 5rpx;
  height: 100rpx;
  color: #FFF;
  font-size: 34rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}