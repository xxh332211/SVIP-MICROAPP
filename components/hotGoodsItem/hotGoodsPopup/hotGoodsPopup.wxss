/* components/hotGoodsItem/hotGoodsPopup/hotGoodsPopup.wxss */

/* 预约成功弹层 */

.order-popup {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.7);
  z-index: 10;
}

.order-popup .order-box {
  display: flex;
  flex-direction: column;
  width: 620rpx;
  border-radius: 5rpx;
  background: #fff;
  padding: 37rpx 0 56rpx;
  position: relative;
}

.order-popup .txt-box {
  text-align: center;
  border-bottom: 1px solid #dedede;
  padding-bottom: 20rpx;
}

.order-popup .txt-box .tit1 {
  font-size: 42rpx;
  font-weight: bold;
}

.order-popup .txt-box .tit2 {
  font-size: 28rpx;
  margin-top: 7rpx;
  padding: 0 60rpx;
}

.order-popup .order-box .order-top {
  padding: 25rpx 45rpx 0;
}

.order-popup .order-box .order-top .goods-img {
  width: 100%;
  height: 279rpx;
  display: block;
  flex-shrink: 0;
}

.order-popup .order-box .order-top .title {
  font-size: 28rpx;
  font-weight: bold;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-top: 16rpx;
}
.order-popup .order-box .order-top .detail {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 8rpx;
}
.order-popup .order-box .order-top .detail .left {
  display: flex;
  flex-direction: column;
}
.order-popup .order-box .order-top .detail .market-price {
  font-size: 20rpx;
  color: #999999;
  text-decoration: line-through;
}

.order-popup .order-box .order-top .detail .unit {
  display: flex;
  align-items: baseline;
  font-size: 44rpx;
  font-weight: bold;
  color: #e6002d;
  margin-top: -16rpx;
}
.order-popup .order-box .order-top .detail .unit .text {
  font-size: 20rpx;
  color: #E6002D;
}

.order-popup .order-box .order-top .detail .unit .lab {
  font-size: 20rpx;
  color: #666;
}

.order-popup .order-box .order-top .detail .sy {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 43rpx;
  background: #007fd7;
  padding: 12rpx 16rpx;
  font-size: 20rpx;
  color: #fff;
  border-radius: 5rpx;
  float: left;
}

.order-popup .order-box .share {
  width: 530rpx;
  height: 83rpx;
  border-radius: 5rpx;
  background: #e6002d;
  color: #fff;
  font-size: 32rpx;
  text-align: center;
  line-height: 83rpx;
  margin-top: 28rpx;
  margin-left: 45rpx;
}

.order-popup .order-box .tips {
  font-size: 24rpx;
  color: #777;
  margin-top: 20rpx;
  padding: 0 45rpx;
}

.order-popup .order-box .tips .tips-txt {
  color: #e6002d;
  font-weight: bold;
}

.order-popup .order-box .close {
  position: absolute;
  top: -50rpx;
  right: -50rpx;
  width: 99rpx;
  height: 99rpx;
  background: url("data:image/png;base64,") no-repeat;
  background-size: 100%;
}
