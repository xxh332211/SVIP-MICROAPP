.share-opt-modal {
  height: 280rpx;
  width: 100%;
  background: #fff;
}

.share-title {
  font-size: 60rpx;
  text-align: right;
  padding: 10rpx 20rpx;
  height: 80rpx;
  width: 100%;
  background: #F0F0F0;
  line-height: 60rpx;
  display: flex;
  justify-content: space-between;
}

.share-opt-btns {
  display: flex;
  justify-content: space-around;
  padding: 60rpx 40rpx;
}

.share-opt-btns > .btn {
  border: 1rpx #d4d4d4 solid;
  padding: 0rpx 50rpx;
  border-radius: 50rpx;
  height: 80rpx;
  line-height: 78rpx;
  font-size: 30rpx;
  box-shadow: 0 0 4rpx #f2f2f2;
}

.share-opt-btns > .btn:hover {
  border-color: #B0A735;
}