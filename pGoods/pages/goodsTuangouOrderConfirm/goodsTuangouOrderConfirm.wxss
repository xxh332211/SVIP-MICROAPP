.order-confirm{
  height: 100%;
  width: 100%;
  background: #FFF;
}
.blank{
  height: 200rpx;
}
.header{
  background: #E6001B;
  color: #FFF;
  padding: 30rpx 30rpx 30rpx 30rpx;
}
.header .info{
  margin-top: 20rpx;
  position: relative;
}
.header .info .state{
  font-size: 38rpx;
}
.header .info .desc{
  font-size: 28rpx;
}
.header .info .info-icon{
  position: absolute;
  right: 0;
  width: 45rpx;
  height: 45rpx;
  top: 50%;
  margin-top: -23rpx;
}
.gap-1{
  width: 100%;
  height: 30rpx;
  display: block;
  margin-top: -10rpx;
  transform: scaleX(-1);
}
.score{
  height: 120rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  font-size: 32rpx;
  border-bottom: solid 1rpx #F7F7F7;
}
.score .label{
  flex: 1;
}
.score .label text{
  color: #BBB;
  font-size: 28rpx;
}
.score .text{
  text-align: right;
}
.score input{
  width: 100%;
  text-align: right;
}
.coupon{
  height: 120rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  font-size: 32rpx;
  border-bottom: solid 1rpx #F7F7F7;
}
.coupon .text{
  flex: 1;
  text-align: right;
}
.coupon image{
  width: 30rpx;
  height: 30rpx;
}
.goods{
  display: flex;
  padding: 40rpx 30rpx;
}
.goods > image{
  width: 300rpx;
  height: 300rpx;
  display: block;
  margin-right: 30rpx;
}
.goods-info{
  flex: 1;
}
.goods-info .name{
  font-size: 28rpx;
}
.goods-info .tag{
  background: #E6001B;
  color: #FFF;
  font-size: 28rpx;
  border-radius: 5rpx;
  line-height: 1;
  width: 120rpx;
  padding: 4rpx 0;
  white-space: nowrap;
  text-align: center;
  margin-top: 20rpx;
}
.goods-info .price{
  color: #E6001B;
  font-weight: bold;
  font-size: 40rpx;
  margin-top: 10rpx;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}
.goods-info .oprice{
  color: #BBB;
  font-size: 32rpx;
  line-height: 1;
}
.goods-info .oprice > text{
  text-decoration: line-through;
  margin-left: 10rpx;
}
.gap-2{
  background: #F7F7F7;
  width: 100%;
  height: 20rpx;
}

.amount{
  padding: 0 30rpx 30rpx 30rpx;
}
.amount .item{
  display: flex;
  padding: 30rpx 0;
  align-items: center;
  font-size: 32rpx;
  border-bottom: dashed 2rpx #999;
}
.amount .item>view:first-child{
  flex: 1;
}
.amount .item>view:nth-child(2){
  width: 180rpx;
}
.amount .total{
  padding: 30rpx 0;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  font-size: 32rpx;
  line-height: 1;
}
.amount .total>text:last-child{
  font-size: 50rpx;
  font-weight: bold;
}

.pay-type{
  display: flex;
  padding: 44rpx 30rpx;
  align-items: center;
  transition: all .2s ease-in-out;
}
.pay-type > text{
  flex: 1;
  margin-left: 30rpx;
  font-size: 32rpx;
}
.pay-type .wx{
  width: 64rpx;
  height: 56rpx;
}
.pay-type .check{
  width: 62rpx;
  height: 62rpx;
}


.pay-btn{
  position: fixed;
  bottom: 60rpx;
  left: 40rpx;
  right: 40rpx;
  background: #D42B2B;
  box-shadow: 0 18rpx 18rpx 0 rgba(183,48,48,0.33);
  border-radius: 5rpx;
  height: 100rpx;
  color: #FFF;
  font-size: 34rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.pay-btn.disabled{
  background: #BBB;
  box-shadow: none;
}

.steps{
  display: flex;
}
.step{
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.step image{
  height: 45rpx;
  width: 45rpx;
  display: block;
  margin-bottom: 4rpx;
}

.dots{
  display: flex;
  margin-top: 4rpx;
}
.dot{
  flex: 1;
  position: relative;
  height: 20rpx;
}
.dot view{
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  top: 50%;
  margin-left: -10rpx;
  margin-top: -10rpx;
  left: 50%;
  background: #FFF;
  border-radius: 50%;
  display: block;
}
.dot:not(:last-child):after{
  content: '';
  position: absolute;
  left: 50%;
  right: 0;
  top: 50%;
  margin-top: -1rpx;
  height: 2rpx;
  background: #FFF;
  display: block;
}
.dot:not(:first-child):before{
  content: '';
  position: absolute;
  left: 0;
  right: 50%;
  top: 50%;
  margin-top: -1rpx;
  height: 2rpx;
  background: #FFF;
  display: block;
}
