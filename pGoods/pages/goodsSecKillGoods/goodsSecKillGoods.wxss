.container{
  display: flex;
  flex-direction: column;
  height: 100%;
  background: #FFF;
}

.head{
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
}
.head .title{
  flex: 1;
}
.head .name{
  font-size: 38rpx;
}
.head .time{
  font-size: 28rpx;
}
.desc{
  font-size: 28rpx;
  margin-top: 20rpx;
  padding: 0 30rpx;
}

.gap{
  height: 20rpx;
  margin: 20rpx 0;
  background: #F7F7F7;
}

.share{
  background: #E6001B;
  box-shadow: 0 18rpx 18rpx 0 rgba(183,48,48,0.33);
  border-radius: 50rpx;
  border-radius: 50rpx;
  color: #FFF;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  height: 100rpx;
  width: 200rpx;
  margin-left: 20rpx;
}
.share > image{
  width: 38rpx;
  height: 38rpx;
  margin: 0 20rpx 0 0rpx;
}

.tabs{
  background: #FFF;
  display: flex;
  justify-content: space-around;
}
.tab{
  width: 130rpx;
  display: flex;
  font-size: 30rpx;
  color: #999999;
  align-items: center;
  padding: 30rpx 20rpx;
}
.tab.active{
  color: #000;
}
.tab image{
  height: 24rpx;
  width: 18rpx;
  display: block;
  margin-left: 8rpx;
}
.cont{
  flex: 1;
  min-height: 0;
}
scroll-view{
  height: 100%;
}
.goods-item{
  width: 100%;
  padding: 0 30rpx;
  display: flex;
  margin-bottom: 40rpx;
}
.goods-item image{
  width: 300rpx;
  height: 300rpx;
  margin-right: 20rpx;
  display: block;
}
.goods-item video{
  width: 300rpx;
  height: 300rpx;
  margin-right: 20rpx;
}
.goods-item .name{
  width: 100%;
  line-height: 40rpx;
  height: 80rpx;
  font-size: 28rpx;
  overflow: hidden;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.progress{
  width: 100%;
  height: 10rpx;
  border-radius: 5rpx;
  background: #F6F6F6;
  position: relative;
  overflow: hidden;
  margin: 30rpx 0 10rpx 0;
}
.progress > view{
  position: absolute;
  left:0;
  top:0;
  display: inline-block;
  height: 10rpx;
  background: #E6001B;
  border-radius: 5rpx;
}
.goods-item .buy{
  display: flex;
  color: #BBB;
  font-size: 28rpx;
  justify-content: space-between;
}

.goods-item .btm{
  display: flex;
  align-items: center;
  width: 100%;
  margin-top: 60rpx;
}
.goods-item .price{
  font-size: 32rpx;
  color: #DC0522;
  font-weight: bold;
}
.goods-item .price1{
  font-size: 32rpx;
  color: #BBB;
  margin-left: 10rpx;
  text-decoration: line-through;
  flex: 1;
  font-size: 28rpx;
}
.goods-item .btn{
  background: #DC0522;
  border-radius: 20rpx;
  width: 100rpx;
  height: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  color: #FFF;
}
.goods-item .btn.disabled{
  background: #BBB;
}


.no-data{
  color: #BBB;
  font-size: 28rpx;
  text-align: center;
  margin-top: 20vh;
}
.no-data text{
  display: block;
}
.no-data image{
  width: 160rpx;
  height: 160rpx;
}


.coupon {
  height: 80rpx;
  display: flex;
  padding: 0 30rpx;
  align-items: center;
}
.coupon .items {
  flex: 1;
  min-height: 0;
}
.coupon .label {
  color: #bbb;
  font-size: 32rpx;
  margin-right: 18rpx;
}
.coupon .items {
  display: flex;
  overflow: hidden;
  height: 38rpx;
  flex-wrap: wrap;
  margin-right: 20rpx;
}
.coupon .item {
  font-size: 24rpx;
  color: #e6001b;
  line-height: 1;
  padding: 7rpx 10rpx;
  position: relative;
  height: 38rpx;
  box-sizing: border-box;
  margin-right: 15rpx;
  white-space: nowrap;
}

.coupon .item image{
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  display: block;
  z-index: 0;
}
.coupon .btn-label {
  font-size: 32rpx;
}
.coupon > image {
  margin-left: 10rpx;
  width: 20rpx;
  height: 20rpx;
}
