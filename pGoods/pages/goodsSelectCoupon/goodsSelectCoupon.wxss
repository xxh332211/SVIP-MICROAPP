
.no-data{
  text-align: center;
  font-size: 28rpx;
  color: #BBB;
  padding-top: 100rpx;
}

.item{
  position: relative;
  margin: 20rpx;
  height: 200rpx;
  background: #FFFFFF;
  box-shadow: 0 6rpx 10rpx 0 rgba(0,0,0,0.10);
  border-radius: 10rpx;
  border-radius: 10rpx;
}

.info{
  position: absolute;
  left: 0;
  right: 100rpx;
  bottom: 0;
  top: 0;
  display: flex;
  align-items: center;
}
.item .btn{
  width: 64rpx;
  height: 64rpx;
  position: absolute;
  right: 30rpx;
  top: 50%;
  margin-top: -32rpx;
}
.item .btn image{
  width: 64rpx;
  height: 64rpx;
}
.left{
  width: 210rpx;
  font-size:24rpx;
  text-align: center;
}
.left .price{
  font-size: 60rpx;
  line-height: 1;
  color: #E6001B;
}
.left .desc{
  color: #BBB;
}
.left .price>text.u{
  font-size: 36rpx;
}
.right{
  flex: 1;
  font-size:24rpx;
  color: #000;
  padding-left: 30rpx;
}
.right .name{
  font-size: 40rpx;
  line-height: 60rpx;
}

.confirm-btn{
  position: fixed;
  bottom: 60rpx;
  left: 40rpx;
  right: 40rpx;
  background: #D42B2B;
  box-shadow: 0 18rpx 18rpx 0 rgba(183,48,48,0.33);
  border-radius: 5rpx;
  height: 100rpx;
  color: #FFF;
  font-size: 34rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
