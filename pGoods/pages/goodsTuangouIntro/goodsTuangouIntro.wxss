page{
  background:#fff;
}
.block{
  padding: 20rpx 30rpx;
}
.head{
  font-size: 32rpx;
  color: #000;
  font-weight: bold;
}
.cont{
  margin-top: 10rpx;
  font-size: 28rpx;
}

.gap{
  height: 20rpx;
  margin: 30rpx 0;
  background: #F7F7F7;
}

.item{
  display: flex;
  padding: 0 30rpx;
}
.item>view:first-child{
  width: 50rpx;
  height: 50rpx;
  background: #E6001B;
  color: #fff;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  margin-right: 20rpx;
  margin-top: 20rpx;
}
.item>view:last-child{
  flex: 1;
}
.item image{
  width: 100%;
  margin: 10rpx 0;
  border: solid 1rpx #efefef;
  border-radius: 10rpx;
}