.container {
  height: 100%;
}

/* 主题列表 */
.classify {
  background: #fff;
  width: 100%;
  padding: 0 30rpx;
  /* overflow: hidden; */
  position: relative;
}

.classify:before {
  content: '';
  display: table;
}

.classify .classifyList {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 249rpx;
  height: 60rpx;
  background: rgba(230, 0, 45, 1);
  border-radius: 30rpx;
  margin: 50rpx 0 36rpx;
  color: #fff;
  font-size: 28rpx;
}

.classify .classifyList .ArrowBottom {
  width: 30rpx;
  height: 18rpx;
  margin-left: 20rpx;
}

.classify .classifyListDown {
  position: absolute;
  top: 110rpx;
  left: 30rpx;
  background: #fff;
  z-index: 999;

}

.classify .classifyListDown view {
  width: 248rpx;
  height: 60rpx;
  /* text-align: center; */
  text-indent: 55rpx;
  line-height: 50rpx;
}

.classify .towClassifyList {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  align-items: center;

}

.classify .towClassifyList .towClassifyListName {
  width: 25%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.classify .towClassifyList .towClassifyListName image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.classify .towClassifyList .towClassifyListName text {
  font-size: 28rpx;
  line-height: 70rpx;
  padding-bottom: 30rpx;
}

/* 直播间 */
.live {
  width: 100%;
  background: #fff;
  padding-bottom: 40rpx;
  margin-top: 32rpx;
}

.live .addlive {
  width: 144rpx;
  height: 38rpx;
  line-height: 38rpx;
  background: linear-gradient(140deg, rgba(255, 0, 54, 1), rgba(255, 38, 0, 1));
  border-radius: 18px;
  text-align: center;
  color: #fff;
  font-size: 24rpx;
  margin: 30rpx auto 0;
}

.live .titleTop {
  font-weight: bold;
  font-size: 36rpx;
  color: #E6002D;
  line-height: 36rpx;
  padding: 30rpx 0 37rpx 60rpx;
}

.live-item {
  display: flex;
  width: 710rpx;
  margin: 20rpx 0 0 20rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0 4rpx 15rpx 0 rgba(14, 5, 10, 0.05);
  border-radius: 5rpx;
  position: relative;
}

.live-item .get-userinfo {
  width: 100% !important;
  height: 100%;
  position: absolute;
  top: 0;
  z-index: 2;
  border: none;
}

.live-item .left {
  position: relative;
}

.live-item .left .live-status {
  display: flex;
  justify-content: space-between;
  position: absolute;
  top: 12rpx;
  left: 9rpx;
  height: 34rpx;
  background: rgba(0, 0, 0, .3);
  border-radius: 17rpx;
}

.live-item .left image {
  width: 330rpx;
  height: 330rpx;
}

.live-item .left .live-status .status {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  font-size: 22rpx;
  color: #FFFFFF;
  border-radius: 17rpx;
  padding: 0 16rpx;
}

.live-item .left .live-status .status .img {
  width: 63rpx;
  height: 18rpx;
  background: url("https://img.51jiabo.com/f359b1f4-6c40-4b28-b647-063eec912fa8.gif") no-repeat;
  background-size: 100%;
}

.live-item .left .live-status .status.lives {
  padding: 0 16rpx 0 0;
  background-color: #E4002D;
}

.live-item .left .live-status .status.notice {
  background-color: #5A00C3;
}

.live-item .left .live-status .status.playback {
  background-color: #FC7958;
}

.live-item .left .live-status .text {
  font-size: 22rpx;
  color: #FFFFFF;
  padding: 0 16rpx;
}


.live-item .right {
  display: flex;
  flex-direction: column;
  padding-left: 30rpx;
}

.live-item .right .title {
  font-size: 30rpx;
  font-weight: bold;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-top: 22rpx;
}

.live-item .right .brand {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}

.live-item .right .brand image {
  width: 42rpx;
  height: 42rpx;
  border-radius: 50%;
}

.live-item .right .brand .name {
  color: #666;
  margin-left: 11rpx;
}

.goods-list {
  display: flex;
  margin-top: 63rpx;
}

.goods-list .goods-item {
  width: 80rpx;
  height: 80rpx;
  border-radius: 5rpx;
  position: relative;
  overflow: hidden;
  margin-right: 20rpx;
  border: 1px solid #E1E1E1;
}

.goods-list .goods-item image {
  width: 100%;
  height: 100%;
}

.goods-list .goods-item .more {
  position: absolute;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .7);
  font-size: 24rpx;
  color: #FFFFFF;
  line-height: 80rpx;
  text-align: center;
  z-index: 99;
}

/* 店铺列表 */
.shopList {
  width: 100%;
  background: #fff;
  padding: 0 10rpx 40rpx 30rpx;
  margin-top: 32rpx;
}

.shopList .title {
  font-weight: bold;
  font-size: 36rpx;
  color: #E6002D;
  line-height: 36rpx;
  padding: 30rpx 0 37rpx 30rpx;
}

.shopList .shopLists {
  width: 100%;
  border: 1px solid #F6F6F6;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  overflow: hidden;
  margin-bottom: 40rpx;
}

.shopList .shopLists image {
  width: 150rpx;
  height: 60rpx;
  margin: 0 36rpx 0 37rpx;
}

.shopList .shopLists .shopTitle {
  width: 320rpx;
  padding: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
}

.shopList .shopLists .shopTitle view:nth-of-type(1) {
  font-size: 36rpx;
  font-weight: bold;
  color: #222;
  line-height: 36rpx;
  padding: 10rpx 0;

}

.shopList .shopLists .shopTitle view:nth-of-type(2) {
  font-size: 24rpx;
  color: #777;
  line-height: 36rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  padding-right: 10rpx;

}

.shopList .shopLists .shopTitle view:nth-of-type(3) {
  color: #E6002D;
  font-size: 26rpx;

}

.shopList .shopLists .public {
  width: 122rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 38rpx 0;
}

.shopList .shopLists .public .number {
  font-size: 28rpx;
  color: #E6002D;
}

.shopList .shopLists .public .publicName {
  width: 122rpx;
  height: 45rpx;
  border: 1rpx solid #E6002D;
  color: #E6002D;
  border-radius: 45rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

/* 返回顶部按钮 */
.posTop {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  position: fixed;
  right: 30rpx;
  bottom: 60rpx;
  background: #fff;
}

.active {
  color: #E4002D;
}

.empty {
  font-size: 30rpx;
  text-align: center;
  padding: 100rpx 0;
}