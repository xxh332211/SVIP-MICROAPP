page{
  height: 100%;
}
.tab-box {
  width: 100%;
  height: 100rpx;
  position: fixed;
  z-index: 999;
  top: 0;
  left: 0;
  background: #fff;
  display: flex;
  box-shadow: 0px 5rpx 15rpx 0px rgba(81, 81, 81, 0.05);
}
.tab-box .tab {
  height: 100rpx;
  font-size: 28rpx;
  width: 33.3%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.tab-box .tab-padding{
  padding: 0 20rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
}
.active{
  color: #e5002d;
  border-bottom: 4rpx solid #e5002d;
}