/* subcontracting.wxss 仅供 abs分包个别元素使用 详情见下方源码 */


/* flex */
.flexB {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.flexA {
    display: flex;
    justify-content: space-around;
    align-items: center;
}

.pop_back {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1000;
    background: rgba(0, 0, 0, 0.8);
}

.pop {
    border-radius: 10rpx;
    position: absolute;
    z-index: 1001;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}

/* 客服弹窗 */
.kefu_pop {
    width: 680rpx;
}

.kefu_pop image {
    width: 100%;
    height: 100%;
}

.close {
    width: 90rpx;
    height: 90rpx;
    background: url("https://img.51jiabo.com/295c2108-1dd0-403c-af77-2804b524e676.png") no-repeat;
    background-size: 30rpx 30rpx;
    background-position: center;
    position: absolute;
    top: 60rpx;
    right: -10rpx;
    z-index: 4;
}

/* 订单详情弹窗 */
.twopop {
    width: 650rpx;
    background: #FFFFFF;
    padding-top: 80rpx;
}

.problem {
    font-size: 36rpx;
    font-family: PingFang;
    font-weight: 500;
    color: #000000;
    text-align: center;
}

.pop_btns {
    padding: 80rpx 92rpx 50rpx;
}

.pop_btns .btn_1 {
    width: 190rpx;
    height: 70rpx;
    background: #FFFFFF;
    border: 1rpx solid #AAAAAA;
    border-radius: 3rpx;
    font-size: 36rpx;
    font-family: PingFang;
    font-weight: 500;
    color: #000000;
    text-align: center;
    line-height: 70rpx;
}

.pop_btns .btn_2 {
    width: 190rpx;
    height: 70rpx;
    background: #E6002D;
    border: 1rpx solid #E6002D;
    border-radius: 3rpx;
    font-size: 36rpx;
    font-family: PingFang;
    font-weight: 500;
    color: white;
    text-align: center;
    line-height: 70rpx;
}

/* 福袋 */
.fudai_pop {
    width: 100%;
    height: 870rpx;
    background: none;
    position: absolute;
    z-index: 1001;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}
.fudai_pop .close{
    top: 0;
    right: 0;
}
.fudai_title {
    height: 80rpx;
    font-size: 42rpx;
    font-family: SourceHanSansCN;
    font-weight: 500;
    color: #FFFFFF;
    text-align: center;
}

.fudai_img {
    width: 90%;
    height: 600rpx;
    display: block;
    margin: 0 auto;
    /* background: pink; */
}

.fudai_btn1,
.fudai_btn2 {
    width: 402rpx;
    height: 80rpx;
    border-radius: 40rpx;
    margin: 25rpx auto 0;
    font-size: 36rpx;
    font-family: SourceHanSansCN;
    font-weight: bold;
    color: #C41713;
    text-align: center;
    background: linear-gradient(90deg, #FFF7E2, #FECD9B);
    line-height: 80rpx;
}