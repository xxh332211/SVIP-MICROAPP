/* pages-abs/pages/OrderList/OrderList.wxss */
@import '../../subcontracting.wxss';

.list {
    width: 750rpx;
    background: #FFFFFF;
    padding: 0 30rpx;
    margin-top: 30rpx;
}

.title {
    height: 89rpx;
    line-height: 89rpx;
    font-size: 32rpx;
    font-weight: bold;
    color: #222222;
}

.bodys {
    display: flex;
}

.img {
    width: 240rpx;
    height: 150rpx;
    background: #F90B33;
    border-radius: 10rpx;
    margin-right: 13rpx;
    position: relative;
}

.img>image {
    width: 100%;
    height: 100%;
    border-radius: 10rpx;
}

.msg {
    width: 416rpx;
    font-size: 28rpx;
    font-family: PingFang;
    font-weight: 500;
    color: #000000;
}

.msg>text {
    display: inline-block;
}

.msg_time {
    font-size: 32rpx;
}

.msg_name {
    font-weight: bold;
    margin-bottom: 6rpx;
}

.msg_refund_time {
    margin-top: 6rpx;
}

.btn-box {
    width: 100%;
    height: 80rpx;
}

.btns {
    width: 100%;
    height: 80rpx;
    display: flex;
    justify-content: flex-end;
}

.btns>view {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 130rpx;
    height: 50rpx;
    border-radius: 25rpx;
    font-size: 24rpx;
    margin-left: 30rpx;
}

.btn1 {
    border: 1rpx solid #E6002D;
    color: #E6002D;
}

.btn2 {
    border: 1rpx solid #333333;
    color: #222222;
}

.pop_btns {
    display: flex;
    align-content: center;
    justify-content: center;
}

.refund {
    justify-content: space-between;
}