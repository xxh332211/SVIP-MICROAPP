/* pages-abs/pages/shoppingList/shoppingList.wxss */
page {
  background-color: #fff;
}

.head-box {
  display: flex;
  justify-content: center;
  padding-top: 30rpx;
}

.head {
  width: 625rpx;
  height: 89rpx;
}

.avatar-box {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.avatar {
  width: 104rpx;
  height: 104rpx;
  border-radius: 50%;
  margin: 19rpx 10rpx 0;
}

.more {
  width: 104rpx;
  height: 104rpx;
  background: url("https://img.51jiabo.com/afed4902-1d76-40eb-aba2-a2474edde775.png") no-repeat;
  background-size: 47rpx 9rpx;
  background-position: center;
  margin: 19rpx 10rpx 0;
}

.share {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 627rpx;
  height: 87rpx;
  background: #FF9C00;
  border-radius: 44rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #FFFFFF;
  margin-left: 61rpx;
  margin-top: 35rpx;
}

.goods-list {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  padding: 74rpx 9rpx;
}

.goods-item {
  width: 358rpx;
  height: 273rpx;
  position: relative;
  margin-bottom: 12rpx;
}

.goods-item .bg {
  width: 100%;
  height: 100%;
}

.goods-item .status {
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  top: 17rpx;
  right: 15rpx;
  width: 104rpx;
  height: 36rpx;
  background: #FF9C00;
  border-radius: 10rpx;
  font-size: 26rpx;
  color: #FFFFFF;
}

.goods-item .info {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background: rgba(0, 0, 0, 0.6);
  padding: 5rpx 23rpx 0;
}

.goods-item .name {
  font-size: 26rpx;
  color: #FFFFFF;
}

.goods-item .price {
  font-size: 36rpx;
  color: #FFFFFF;
  margin-top: -15rpx;
  margin-bottom: -4rpx;
  margin-left: -8rpx;
}

.more-item {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  width: 358rpx;
  height: 269rpx;
  background: #E1E1E1;
}

.more-item .more-img {
  width: 99rpx;
  height: 104rpx;
}

.more-item .text {
  font-size: 22rpx;
  color: #383838;
  margin-top: 2rpx;
}

.empty {
  font-size: 30rpx;
  color: #383838;
  text-align: center;
  padding-top: 200rpx;
}

.popup {
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .6);
  font-size: 30rpx;
  color: #fff;
}