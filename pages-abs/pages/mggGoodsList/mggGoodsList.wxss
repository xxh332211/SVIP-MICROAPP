/* pages-abs/pages/mggGoodsList/mggGoodsList.wxss */
.container{
  padding-bottom: 50rpx;
}

.banner-swp{
  width: 100%;
}

.mgg-tab-box{
  width: 690rpx;
  position: relative;
  display: flex;
  justify-content: space-between;
  border-radius: 10rpx;
  background-color: #fff;
  overflow: hidden;
  margin: 18rpx auto 0;
  border: 1rpx solid #DCDCDC;
}

.mgg-tab{
  height: 90rpx;
  line-height: 90rpx;
  font-size: 28rpx;
  color: #676767;
  width: 226rpx;
  text-align: center;
}

.mgg-tab-act{
  background-color: #F2F2F2;
  color: #222;
  font-size: 32rpx;
  font-weight: bold;
}

.mgg-line1{
  position: absolute;
  left: 226rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 2rpx;
  height: 22rpx;
  background-color: #676767;
}

.mgg-line2{
  position: absolute;
  left: 458rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 2rpx;
  height: 22rpx;
  background-color: #676767;
}

.list{
  width: 100%;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  padding-bottom: 20rpx;
}

.item{
  width: 335rpx;
  border-radius: 10rpx;
  overflow: hidden;
  background-color: #fff;
  margin-bottom: 30rpx;
}

.item-top{
  position: relative;
  width: 100%;
  height: 335rpx;
}

.mgg-icon{
  position: absolute;
  left: 0;
  bottom: 0;
  width: 140rpx;
  height: 65rpx;
}

.item-btm{
  padding: 20rpx 15rpx;
}

.item-name{
  height: 100rpx;
  font-size: 30rpx;
  color: #222222;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: -o-ellipsis-lastline;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}

.price{
  font-size: 28rpx;
  color: #E6002D;
  margin: 0 0 20rpx;
}

.del-price{
  font-size: 28rpx;
  color: #666666;
  text-decoration: line-through;
}