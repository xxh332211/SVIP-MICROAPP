}

/* 取消订单 */
.pop_back {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: rgba(0, 0, 0, 0.8);
}

.pop_back .pop {
  border-radius: 10rpx;
  position: absolute;
  z-index: 1001;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.pop_back .twopop {
  width: 650rpx;
  background: #FFFFFF;
  padding-top: 80rpx;
}
.pop_back .fail-text{
  font-size: 34rpx;
