/* 选择退款数量弹层 */
.refund-popup {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  background-color: rgba(0, 0, 0, .8);
  z-index: 10;
}

.refund-popup .refund-box {
  width: 680rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  position: relative;
  padding-bottom: 42rpx;
}

.refund-popup .title {
  width: 100%;
  height: 113rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 34rpx;
  font-weight: bold;
}

.refund-popup .close {
  width: 94rpx;
  height: 114rpx;
  background: url(https://img.51jiabo.com/b9a993a3-bc75-4c98-afb6-e9ce9c894e8b.png) no-repeat;
  background-size: 30rpx 30rpx;
  background-position: center center;
  position: absolute;
  top: 0;
  right: 0;
}

.refund-popup .goods-info {
  display: flex;
  padding: 0 23rpx;
  margin-top: 22rpx;
}

.refund-popup .goods-img {
  flex-shrink: 0;
  width: 200rpx;
  height: 200rpx;
  margin-right: 17rpx;
}

.refund-popup .good-right {
  width: 100%;
}

.refund-popup .goods-name {
  min-height: 70rpx;
  font-size: 28rpx;
  font-weight: bold;
  word-break: break-all;
  line-height: 39rpx;
}

.refund-popup .unit-price {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  margin-top: 3rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.refund-popup .count {
  font-weight: normal;
  font-size: 32rpx;
}

.refund-popup .refund-num {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  font-size: 21rpx;
  padding-right: 30rpx;
  margin-top: 30rpx;
}

.refund-popup .mp-box {
  display: flex;
  align-items: center;
}

.refund-popup .mp {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40rpx;
